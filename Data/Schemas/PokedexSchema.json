{
  "title": "Pokemon Definition",
  "description": "Definitional schema for Pokemon.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "Id": {
        "type": "integer",
        "minimum": 1,
        "maximum": 151
      },
      "Name": {
        "type": "string"
      },
      "Type": {
        "type": "array",
        "items": {
          "enum": [
            "Normal",
            "Fire",
            "Water",
            "Electric",
            "Grass",
            "Ice",
            "Fighting",
            "Poison",
            "Ground",
            "Flying",
            "Psychic",
            "Bug",
            "Rock",
            "Ghost",
            "Dragon"
          ]
        }
      },
      "Stats": {
        "type": "object",
        "properties": {
          "HP": {
            "type": "integer"
          },
          "Attack": {
            "type": "integer"
          },
          "Defense": {
            "type": "integer"
          },
          "Sp. Attack": {
            "type": "integer"
          },
          "Sp. Defense": {
            "type": "integer"
          },
          "Speed": {
            "type": "integer"
          }
        },
        "required": [
          "HP",
          "Attack",
          "Defense",
          "Sp. Attack",
          "Sp. Defense",
          "Speed"
        ]
      },
      "Moves": {
        "type": "object",
        "properties": {
          "Default": {
            "type": "array",
            "items": {
              "type": [
                "string",
                "integer",
                "null"
              ]
            },
            "minItems": 4,
            "maxItems": 4
          },
          "Level": {
            "type": "object"
          },
          "TM": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "HM": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "Level"
        ]
      },
      "Evolution": {
        "type": "object",
        "properties": {
          "Level": {
            "type": "integer"
          },
          "Species": {
            "type": [
              "string",
              "integer"
            ]
          }
        },
        "required": [
          "Level",
          "Species"
        ]
      }
    },
    "required": [
      "Id",
      "Name",
      "Type",
      "Stats"
    ]
  }
}